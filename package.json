{
  "name": "Qlik-ops",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "app:dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.streamlitelectron",
    "productName": "StreamlitElectronApp",
    "files": [
      "main.js",
      "backend/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "python_qlik/",
        "to": "python_qlik",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": { "target": "zip" }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0"
  }
}